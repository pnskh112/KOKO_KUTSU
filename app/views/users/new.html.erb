<%= form_for @user,method: :post, url: users_path do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name%>

  <%= f.label :mail %>
  <%= f.text_field :mail%>

  <%= f.label :password %>
  <%= f.text_field :password%>

  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation%>

  <%= f.submit '登録' %>
<% end %>
<%= form_with(model:[:user,@user], url: users_create_path(@num_boxid)) do |form| %>
  <div class="wrapper">
    <!-- <form action="" method="post" name="Login_Form" class="form-signin">       -->

    <h1 class="form-signin-heading">ユーザ登録</h1>
    <hr class="colorgraph"><br>

                      <div class="field">
                        <%= form.label :"名前" %>
                        <%= form.text_field :name %>
                      </div>

                      <div class="field">
                        <%= form.label :"メールアドレス" %>
                        <%= form.text_field :mail ,placeholder:"任意です！"%>
                      </div>

                      <div class="field">
                        <%= form.label :"パスワード" %>
                        <%= form.text_field :password ,placeholder:"任意です！"%>
                      </div>

                      <div class="field buton">
                        <%= form.label :" " %>
                        <%= form.button 'ユーザ登録' %>
                      </div>

<% end %>